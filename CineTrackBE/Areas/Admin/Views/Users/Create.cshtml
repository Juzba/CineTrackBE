@using CineTrackBE.Models.Entities
@model User

@{
    ViewData["Title"] = "Create User";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="UserName" class="control-label"></label>
                <input type="email" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div>
                <label for="box" class="control-label my-1">Role:</label>

                <div id="box" class="d-flex">

                    <div>
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="roleUser" checked value="true">
                        <label class="form-check-label" for="inlineCheckbox1">User</label>
                    </div>

                    <div class="mx-3">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox" name="roleAdmin" value="true">
                        <label class="form-check-label" for="inlineCheckbox">Admin</label>
                    </div>

                </div>
            </div>

            <div class="form-group my-3">
                <label asp-for="PasswordHash"  class="control-label">Password</label>
                <input type="text" asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-check my-3">
                <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox">
                <label asp-for="EmailConfirmed" class="form-check-label" ></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="flex-column">
                <input type="submit" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-outline-info mx-2">Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
