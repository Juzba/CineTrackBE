@using CineTrackBE.Models.Entities
@using CineTrackBE.Models.ViewModel
@model UserWithRoles

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group my-3">
                <label asp-for="UserName" class="control-label"></label>
                <input type="email" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div>
                <label for="box"  class="control-label my-1">Role:</label>

                <div id="box" class="d-flex">

                   <div >
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" @(Model.Roles.Contains("User") ? "checked" : "") name="roleUser" value="true">
                        <label class="form-check-label" for="inlineCheckbox1">User</label>
                   </div>

                    <div class="mx-3" >
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox" @(Model.Roles.Contains("Admin") ? "checked" : "") name="roleAdmin" value="true">
                        <label class="form-check-label" for="inlineCheckbox">Admin</label>
                   </div>
                  
                </div>
            </div>


            <div class="form-group my-3">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input type="text" asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-check my-3">
                <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox">
                <label asp-for="EmailConfirmed" class="form-check-label"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group flex-column">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-info mx-2" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
